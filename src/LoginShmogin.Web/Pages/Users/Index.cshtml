@page
@model LoginShmogin.Web.Pages.UsersModel
@{
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Users[0].UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].Email)</th>
            <th>@Html.DisplayNameFor(model => model.Users[0].EmailConfirmed)</th>
            <th class="th-fit"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
                <td>
                    <form asp-page-handler="delete" asp-route-id="@item.Id" method="post">
                        <button class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>