@page
@model LoginShmogin.Web.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using LoginShmogin.Application.Interfaces;
@inject ISignInService SignInService

<div class="text-center">
    <h2 class="mb-2">ASP.NET Core Identity Example</h2>
    @if (SignInService.IsSignedIn(User))
    {
        <div class="alert alert-primary" role="alert">
            You are signed in as @User.Identity.Name
        </div>
    }
    else
    {
        <div class="d-grid gap-2 col-6 mx-auto">
            <p><a class="btn btn-block btn-primary" asp-page="/Login">Login</a></p>
            <p><a class="btn btn-block btn-primary" asp-page="/Register">Register</a></p>
        </div>
    }
</div>