@page
@model LoginShmogin.Web.Pages.AccountRecoveryModel
@{
}

<h2>Account recovery</h2>
<form method="POST">
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input class="form-control w-25" asp-for="Input.Email">
        <span class="text-danger" asp-validation-for="Input.Email"></span>
    </div>
    <input class="btn btn-primary" type="submit" value="Recover" />
    <small class="text-success">@Model.Message</small>
</form>
