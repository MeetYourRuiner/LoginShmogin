@page
@model LoginShmogin.Web.Pages.SettingsModel
@{
}
<div class="w-25">
    <form method="POST">
        <div class="form-group">
            <label asp-for="Input.OldPassword"></label>
            <input class="form-control" asp-for="Input.OldPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Input.NewPassword"></label>
            <input class="form-control" asp-for="Input.NewPassword" />
            <small id="helpId" class="text-muted">At least 6 characters</small>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmNewPassword"></label>
            <input class="form-control" asp-for="Input.ConfirmNewPassword" />
        </div>
        <input class="btn btn-primary" type="submit" value="Change" />
        <div asp-validation-summary="ModelOnly"></div>
    </form>
</div>
