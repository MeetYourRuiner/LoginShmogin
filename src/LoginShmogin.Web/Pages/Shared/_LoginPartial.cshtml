@using LoginShmogin.Application.Interfaces;
@inject ISignInService SignInService

<ul class="navbar-nav">
    @if (SignInService.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Profile/Settings">Hello, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Logout"
            asp-route-returnUrl="@Url.Page("/", new { area = "" })">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/Login">Login</a>
        </li>
    }
</ul>
