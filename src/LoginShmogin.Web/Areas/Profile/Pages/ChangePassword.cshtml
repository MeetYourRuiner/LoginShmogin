@page
@using LoginShmogin.Web.Areas.Profile.Pages
@model LoginShmogin.Web.Areas.Profile.Pages.ChangePasswordModel
@{
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<div>
    <partial name="_StatusMessagePartial" for="StatusMessage" />
    <form method="POST">
        <div class="form-group">
            <label asp-for="Input.OldPassword"></label>
            <input class="form-control w-25" asp-for="Input.OldPassword" />
            <span class="text-danger" asp-validation-for="Input.OldPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.NewPassword"></label>
            <input class="form-control w-25" asp-for="Input.NewPassword" />
            <small id="helpId" class="text-muted">At least 6 characters</small><br />
            <span class="text-danger" asp-validation-for="Input.NewPassword"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmNewPassword"></label>
            <input class="form-control w-25" asp-for="Input.ConfirmNewPassword" />
            <span class="text-danger" asp-validation-for="Input.ConfirmNewPassword"></span>
        </div>
        <input class="btn btn-primary" type="submit" value="Change" />
        <div asp-validation-summary="ModelOnly"></div>
    </form>
</div>
